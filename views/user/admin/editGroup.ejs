<main class="contenedor contenedor-formularios no-padding">
    <h1>
        <%= nombrePagina %>
    </h1>

    <form class="default-form" method="post">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" name="name" placeholder="Nuevo grupo" value="<%= group.name %>">
        </div>
        <div class="campo descripcion">
            <label for="">Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" name="description" id="x" value="<%= group.description %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="">Categoria</label>
            <select name="categoryId">
                <option selected disabled>-- Elige una categoria --</option>
                <% categories.forEach(category=> { %>
                    <option value=<%= category.id %> <%= (group.categoryId === category.id) ? 'selected' : '' %> >
                        <%= category.name %>
                    </option>
                <% }); %>
            </select>
        </div>
        <div class="campo">
            <label for="">URL</label>
            <input type="url" name="url" placeholder="Sitio web" value="<%= group.url %>">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Editar grupo" class="btn btn-rosa">
        </div>
    </form>
</main>