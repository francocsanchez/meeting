<main class="contenedor contenedor-formularios no-padding">
    <h1>
        <%= nombrePagina %>
    </h1>

    <form action="" class="default-form" method="post">
        <div class="campo">
            <label for="">Nombre</label>
            <input type="text" name="name" placeholder="Nuevo grupo">
        </div>
        <div class="campo descripcion">
            <label for="">Descripcion</label>
            <div class="contenedor-editor">
                <input type="hidden" name="descripcion" id="x">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="">Categoria</label>
            <select name="category" id="">
                <option value="" selected disabled>-- Elige una categoria --</option>
                <% categories.forEach(category=> { %>
                    <option value="<%= category.id %>">
                        <%= category.name %>
                    </option>
                <% }); %>
            </select>
        </div>
        <div class="campo">
            <label for="">Imagen</label>
            <input type="file" name="img">
        </div>
        <div class="campo">
            <label for="">Imagen</label>
            <input type="url" name="url" placeholder="Sitio web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Crear grupo" class="btn btn-rosa">
        </div>
    </form>
</main>